<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/toaster/toastr.min.js"></script>
@if (TempData["notification"] != null)
{
  
    <script type="text/javascript">

        toastr.options = {
          "closeButton": true,
          "debug": false,
          "toastClass": "custom-toast-margin",
          "newestOnTop": false,
          "progressBar": true,
          "positionClass": "toast-top-right",
          "preventDuplicates": true,
          "onclick": null,
          "showDuration": "300",
          "hideDuration": "1000",
          "timeOut": "5000",
          "extendedTimeOut": "1000",
          "showEasing": "swing",
          "hideEasing": "linear",
          "showMethod": "fadeIn",
          "hideMethod": "fadeOut"
        }
      
        var notification = JSON.parse('@Html.Raw(TempData["notification"])');
        toastr[notification.Type](notification.Message);
    </script>
}
